<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10sp"
    app:cardCornerRadius="8sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:scaleType="centerCrop"
            android:src="@drawable/asset_produk1"/>

        <com.google.android.material.card.MaterialCardView
            android:backgroundTint="#E1A902"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginStart="-15sp"
            android:layout_marginTop="8sp">
            <TextView
                android:layout_marginStart="20sp"
                android:layout_marginEnd="8sp"
                android:layout_marginVertical="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terlaris"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginVertical="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Product"
                android:textSize="12sp"/>

            <TextView
                android:layout_marginVertical="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 10.000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp"/>


            <com.google.android.material.card.MaterialCardView
                app:cardElevation="0dp"
                android:backgroundTint="@color/colorPrimary_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3sp"
                    android:layout_marginHorizontal="3sp"
                    android:text="Glosir"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/green" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3sp"
                android:layout_marginHorizontal="3sp"
                android:text="Jakarta Barat"
                android:textSize="9sp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    app:tint="#FFC107"
                    android:src="@drawable/ic_baseline_star_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:text="5.0 | Teerjual 1.1K"
                    android:textSize="9sp" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




</com.google.android.material.card.MaterialCardView>
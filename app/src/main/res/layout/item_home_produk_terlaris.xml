<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10sp"
    app:cardCornerRadius="8sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130sp"
            android:layout_height="100sp"
            android:scaleType="centerCrop"
            android:src="@drawable/asset_produk2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_marginVertical="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 69.900"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/colorRed_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3sp"
                        android:layout_marginHorizontal="3sp"
                        android:text="26%"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_marginLeft="5sp"
                    android:layout_marginVertical="@dimen/cardview_default_elevation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 94.900"
                    android:textSize="11sp"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20sp"
                    android:layout_height="10sp"
                    app:tint="#FFC107"
                    android:src="@drawable/ic_baseline_star_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:text="5.0 | Teerjual 1.1K"
                    android:textSize="9sp" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




</com.google.android.material.card.MaterialCardView>